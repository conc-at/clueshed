<% @prefix = 'STYLE_' %>
<% ENV.each do |key, value| %>
  <% if key.start_with? @prefix %>
    $<%= key.sub(@prefix, '').gsub('_','-') %>: <%= value %>;
  <% end %>
<% end %>

@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";

body {
  padding-top: 40px;
  padding-bottom: 90px;
}

a.list-group-item {
  color: $brand-primary;
}

.btn-github {
  @include button-variant(white, hsla(0,0%,20%,1), darken(hsla(0,0%,20%,1), 10%));
}

.btn-twitter {
  @include button-variant(white, hsla(206,82%,63%,1), darken(hsla(206,82%,63%,1), 10%));
}

.list-group-item.partip, .panel-footer.partip {
  .text-label {
    display: block;
  }

  .actions, .badge {
    float: right;
  }

  .fa {
    display: inline-block;
  }

  .badge, .fa {
    margin-left: 10px;
  }

  a {
    text-decoration: none !important;
  }
}

.breadcrumb {
  margin-bottom: 0;
}
