= simple_form_for partip(type), html: { class: 'form-vertical expand' } do |f|
  = f.input :title, placeholder: placeholder(type), wrapper_class: 'visible form-group', label_html: { class: 'sr-only' }
  = f.input :description, as: :text
  - if type == "contrib"
    = f.input :first_time_speaker, inline_label: 'First-time speaker'
  .actions
    = f.button :submit
