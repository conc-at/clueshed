- unless user_signed_in?
  .row.signup-teaser
    .col-md-4.col-md-offset-4
      = link_to '/users/auth/github', class: 'btn btn-github btn-lg btn-block' do
        = icon('github', 'Sign In')
    .col-md-2.col-md-offset-4.col-xs-6
      = link_to '/users/auth/twitter', class: 'btn btn-twitter btn-block' do
        = icon('twitter', 'Sign In')
    .col-md-2.col-xs-6
      = link_to new_user_registration_path, class: 'btn btn-primary btn-block' do
        = icon('envelope', 'Sign Up')
.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %strong Interests
      .list-group
        - if @interests.length == 0 and !user_signed_in?
          .list-group-item No Interests yet - signup to add yours.
        - if user_signed_in?
          .list-group-item
            = render 'form', type: 'interest'
        - @interests.each do |interest|
          = render 'partips/list_item', partip: interest
  .col-md-6
    .panel.panel-default
      .panel-heading
        %strong Contribs
      .list-group
        - if @contribs.length == 0
          .list-group-item No Contribs yet - signup to add yours.
        - if user_signed_in?
          .list-group-item
            = render 'form', type: 'contrib'
        - @contribs.each do |contrib|
          = render 'partips/list_item', partip: contrib
