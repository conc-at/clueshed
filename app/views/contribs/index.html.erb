<%= render 'home/header' %>

<h1>Listing contribs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contribs.each do |contrib| %>
      <tr>
        <td><%= contrib.title %></td>
        <td><%= contrib.description %></td>
        <td><%= link_to 'Show', contrib %></td>
        <td><%= link_to 'Edit', edit_contrib_path(contrib) %></td>
        <td><%= link_to 'Destroy', contrib, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contrib', new_contrib_path %>
