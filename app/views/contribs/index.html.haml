%h1 Listing contribs
%table
  %thead
    %tr
      %th Title
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @contribs.each do |contrib|
      %tr
        %td= contrib.title
        %td= contrib.description
        %td= link_to 'Show', contrib
        %td= link_to 'Edit', edit_contrib_path(contrib)
        %td= link_to 'Destroy', contrib, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Contrib', new_contrib_path
